<def-group>
  <definition class="compliance" id="mount_option_srv_nosuid" version="1">
    <metadata>
        <title>Add nosuid Option to /srv</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 7</platform>
    </affected>
        <description>/srv should be mounted with mount option nosuid.</description>
    </metadata>
    <criteria>
      <criterion comment="nosuid on /srv" test_ref="test_srv_partition_nosuid" />
    </criteria>
  </definition>

  <linux:partition_test check="all" check_existence="all_exist"
  id="test_srv_partition_nosuid" version="1" comment="nosuid on /srv">
    <linux:object object_ref="object_srv_partition_nosuid" />
    <linux:state state_ref="state_srv_partition_nosuid" />
  </linux:partition_test>
  <linux:partition_object id="object_srv_partition_nosuid" version="1">
    <linux:mount_point>/srv</linux:mount_point>
  </linux:partition_object>
  <linux:partition_state id="state_srv_partition_nosuid" version="1">
    <linux:mount_options datatype="string" entity_check="at least one" operation="equals">nosuid</linux:mount_options>
  </linux:partition_state>
</def-group>