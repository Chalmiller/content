<def-group>
  <definition class="compliance" id="file_permissions_etc_motd" version="1">
    <metadata>
        <title>Verify permissions on Message of the Day Banner</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 7</platform>
    </affected>
        <description>This test makes sure that /etc/motd has mode 0644.
      If the target file or directory has an extended ACL, then it will fail the mode check.
      </description>
    </metadata>
    <criteria>
      <criterion comment="Check file mode of /etc/motd" test_ref="test_file_permissions_etc_motd" />
    </criteria>
  </definition>
    <unix:file_test check="all" check_existence="all_exist" comment="Testing mode of /etc/motd" id="test_file_permissions_etc_motd" version="1">
    <unix:object object_ref="object_file_permissions_etc_motd" />
    <unix:state state_ref="state_file_permissions_etc_motd_mode_0644" />
  </unix:file_test>
  <unix:file_state id="state_file_permissions_etc_motd_mode_0644" version="1">
    	<unix:suid datatype="boolean">false</unix:suid>
	<unix:sgid datatype="boolean">false</unix:sgid>
	<unix:sticky datatype="boolean">false</unix:sticky>
	<unix:uread datatype="boolean">true</unix:uread>
	<unix:uwrite datatype="boolean">true</unix:uwrite>
	<unix:uexec datatype="boolean">false</unix:uexec>
	<unix:gread datatype="boolean">true</unix:gread>
	<unix:gwrite datatype="boolean">false</unix:gwrite>
	<unix:gexec datatype="boolean">false</unix:gexec>
	<unix:oread datatype="boolean">true</unix:oread>
	<unix:owrite datatype="boolean">false</unix:owrite>
	<unix:oexec datatype="boolean">false</unix:oexec>

  </unix:file_state>
  <unix:file_object comment="/etc/motd" id="object_file_permissions_etc_motd" version="1"><unix:filepath>/etc/motd</unix:filepath></unix:file_object>
</def-group>