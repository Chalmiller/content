<def-group>

  

  <definition class="compliance" id="service_sssd_disabled" version="1">
    <metadata>
        <title>service_sssd_disabled</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The sssd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package sssd-common removed or service sssd is not configured to start" operator="OR">
      <criterion comment="sssd-common removed" test_ref="test_service_sssd_package_sssd-common_removed" />
      <criteria operator="AND" comment="service sssd is not configured to start">
        <criterion comment="sssd is not running" test_ref="test_service_not_running_sssd" />
        <criterion comment="Property LoadState of service sssd is masked" test_ref="test_service_loadstate_is_masked_sssd" />
        <criterion comment="Property FragmentPath of service sssd is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_sssd" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitproperty_test id="test_service_not_running_sssd" check="all" check_existence="any_exist" comment="Test that the sssd service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_sssd"/>
    <linux:state state_ref="state_service_not_running_sssd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_sssd" comment="Retrieve the ActiveState property of sssd" version="1">
    <linux:unit operation="pattern match">^sssd\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_sssd" version="1" comment="sssd is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_sssd" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service sssd is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_sssd"/>
    <linux:state state_ref="state_service_loadstate_is_masked_sssd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_sssd" comment="Retrieve the LoadState property of sssd" version="1">
    <linux:unit operation="pattern match">^sssd\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_sssd" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_sssd" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service sssd is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_sssd"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_sssd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_sssd" comment="Retrieve the FragmentPath property of sssd" version="1">
    <linux:unit operation="pattern match">^sssd\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_sssd" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_sssd_package_sssd-common_removed" version="1"
  comment="package sssd-common is removed">
    <linux:object object_ref="obj_test_service_sssd_package_sssd-common_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_sssd_package_sssd-common_removed" version="1">
    <linux:name>sssd-common</linux:name>
  </linux:rpminfo_object>


</def-group>