<def-group>
  <definition class="compliance" id="file_groupowner_backup_etc_shadow" version="1">
    <metadata>
        <title>Verify User Who Owns Backup shadow File</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 7</platform>
    </affected>
        <description>This test makes sure that /etc/shadow- is group owned by 0.</description>
    </metadata>
    <criteria>
      <criterion comment="Check file group ownership of /etc/shadow-" test_ref="test_file_groupowner_backup_etc_shadow" />
    </criteria>
  </definition>
    <unix:file_test check="all" check_existence="any_exist" comment="Testing group ownership of /etc/shadow-" id="test_file_groupowner_backup_etc_shadow" version="1">
    <unix:object object_ref="object_file_groupowner_backup_etc_shadow" />
    <unix:state state_ref="state_file_groupowner_backup_etc_shadow_gid_0" />
  </unix:file_test>
  <unix:file_state id="state_file_groupowner_backup_etc_shadow_gid_0" version="1">
    <unix:group_id datatype="int">0</unix:group_id>
  </unix:file_state>
  <unix:file_object comment="/etc/shadow-" id="object_file_groupowner_backup_etc_shadow" version="1"><unix:filepath>/etc/shadow-</unix:filepath></unix:file_object>
</def-group>