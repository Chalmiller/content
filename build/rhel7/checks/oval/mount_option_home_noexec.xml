<def-group>
  <definition class="compliance" id="mount_option_home_noexec" version="1">
    <metadata>
        <title>Add noexec Option to /home</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 7</platform>
    </affected>
        <description>/home should be mounted with mount option noexec.</description>
    </metadata>
    <criteria>
      <criterion comment="noexec on /home" test_ref="test_home_partition_noexec" />
    </criteria>
  </definition>

  <linux:partition_test check="all" check_existence="all_exist"
  id="test_home_partition_noexec" version="1" comment="noexec on /home">
    <linux:object object_ref="object_home_partition_noexec" />
    <linux:state state_ref="state_home_partition_noexec" />
  </linux:partition_test>
  <linux:partition_object id="object_home_partition_noexec" version="1">
    <linux:mount_point>/home</linux:mount_point>
  </linux:partition_object>
  <linux:partition_state id="state_home_partition_noexec" version="1">
    <linux:mount_options datatype="string" entity_check="at least one" operation="equals">noexec</linux:mount_options>
  </linux:partition_state>
</def-group>